<Window x:Class="StockKLineApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stock CSV Import" Height="560" Width="900">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="打开 CSV" Width="120" Command="{Binding OpenCsvCommand}" />
            <TextBox Margin="12,0,0,0" Width="280"
                     VerticalContentAlignment="Center"
                     Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <TextBlock DockPanel.Dock="Top" Margin="0,0,0,12" Text="{Binding StatusMessage}" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="股票列表" Grid.Column="0">
                <DataGrid ItemsSource="{Binding Stocks}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="*" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                        <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox Header="解析错误（已跳过）" Grid.Column="2">
                <ListBox ItemsSource="{Binding Errors}" />
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
